<%- include('../partials/header') %>
<main>
    <div class="course-header">
        <h1><%= course.name %></h1>
        <p class="course-meta"><%= course.courseCode %> â€¢ <%= course.creditHours %> credits</p>
        <p class="course-description"><%= course.description %></p>
    </div>

    <div class="sections">
        <div class="sections-header">
            <h2>Available Sections</h2>
            <div class="sort-options">
                <span>Sort by: </span>
                <a href="/catalog/<%= course.slug %>" class="<%= currentSort === 'time' ? 'active' : '' %>">Time</a>
                <a href="/catalog/<%= course.slug %>?sort=professor"
                    class="<%= currentSort === 'professor' ? 'active' : '' %>">Professor</a>
                <a href="/catalog/<%= course.slug %>?sort=room"
                    class="<%= currentSort === 'room' ? 'active' : '' %>">Room</a>
            </div>
            <% if (queryParams.sort) { %>
            <div class="sort-message">
                <p>Currently sorted by: <%= queryParams.sort %></p>
            </div>
            <% } else { %>
            <div class="sort-message">
                <p>No sorting applied, using default sorting by time.</p>
            </div>
            <% } %>

        </div>

        <div class="section-list">
            <% Object.values(course.sections).forEach(section => { %>
            <div class="section-card">
                <div class="section-time"><%= section.time %></div>
                <div class="section-room">Room: <%= section.room %></div>
                <div class="section-professor">Instructor: <%= section.professor %></div>
            </div>
            <% }); %>
        </div>
    </div>

    <div class="navigation">
        <p><a href="/catalog">&larr; Back to Course Catalog</a></p>
    </div>
</main>
<%- renderScripts() %>
<%- include('../partials/footer') %>