<%- include('../../partials/header') %>
<main>
    <h1><%= title %></h1>
    <p>
        Register for a new account by providing your information below. All fields are required and passwords must meet
        security requirements.
    </p>

    <form method="POST" action="/register" class="registration-form">
        <!-- Name field -->
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" minlength="2" required placeholder="Enter your name">
        </div>

        <!-- Phone field -->
        <div class="form-group">
            <label for="phone">Phone</label>
            <input type="tel" id="phone" name="phone" required placeholder="Enter your phone number">
        </div>

        <!-- Address field -->
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" id="address" name="address" required placeholder="Enter your address">
        </div>

        <!-- Email field -->
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required placeholder="Enter your email">
        </div>

        <!-- Email confirmation field -->
        <div class="form-group">
            <label for="emailConfirm">Confirm Email</label>
            <input type="email" id="emailConfirm" name="emailConfirm" required placeholder="Confirm your email">
        </div>

        <!-- Password field -->
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" minlength="8" required
                pattern="(?=.*[0-9])(?=.*[!@#$%^&*]).*" placeholder="Enter your password">
            <div class="help-text">Must be at least 8 characters with a number and special character</div>
        </div>

        <!-- Password confirmation field -->
        <div class="form-group">
            <label for="passwordConfirm">Confirm Password</label>
            <input type="password" id="passwordConfirm" name="passwordConfirm" minlength="8" required
                pattern="(?=.*[0-9])(?=.*[!@#$%^&*]).*" placeholder="Confirm your password">
            <div class="help-text">Must match the password entered above</div>
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn-submit">Create Account</button>
    </form>
</main>
<%- include('../../partials/footer') %>